package qyiz;

public class MyTime {
	
	private int hour; 
	private int minute; 
	private int second;
	
	public MyTime() {
		int hour;
		int minute;
		int second;
	}
	public MyTime(int h = 0, int min = 0, int sec = 0) {
		this.hour = h;
		this.minute = min;
		this.second = sec;
	}
	
	public int getHour() {
		return this.hour;
	}
	
	public int getMinute() {
		return this.minute;
	}
	
	public int getSecond() {
		return this.second;
	}
	
	public boolean setHour(int hour) {
		if(hour > 24 || hour < 0) {
			return false;
		} else {
			this.hour = hour;
			return true;
		}
	}
	
	public boolean setMinute(int minute) {
		
	}
}
