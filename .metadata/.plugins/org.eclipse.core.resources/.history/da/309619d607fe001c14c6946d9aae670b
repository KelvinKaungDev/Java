package AssigmentFour;

import java.util.Scanner;

public class VoteCount {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scanner = new Scanner(System.in);
		
		System.out.print("Enter the candidates number : ");
		int candidateNumber = scanner.nextInt();
		
		System.out.print("Enter the voter number : ");
		int voterNumber = scanner.nextInt();
		
		System.out.print("Enter the vote number : ");
		int[] voteCount = new int[voterNumber];
		
		for(int i=0; i < voteCount.length; i++) {
			voteCount[i] = scanner.nextInt();
		}
		
		scanner.close();
		int[] result = countMaximan(voteCount, candidateNumber);

		for(int i =0; i < candidateNumber; i++ ) {
			System.out.print(result[i]);
		}
	}
	
	public static int[] countMaximan(int[] voteCount, int candidate) {
		int[] voteArray = new int[candidate];
		for(int i=0; i < candidate; i++) {
			int allVote = 0;
			for(int y=0; y < voteCount.length; y++) {
				if((i + 1) == voteCount[y]) {
					allVote += 1;
				}
			}
			voteArray[i] = allVote;
		}
		findMaximan(voteArray)
		return voteArray;
	}
	
	public static int findMaximan(int[] result) {
		int voteWinner = 0;
		for(int i=0; i< result.length; i++) {
			voteWinner = Math.max(voteWinner, i);
		}
		return voteWinner;
	}

}
