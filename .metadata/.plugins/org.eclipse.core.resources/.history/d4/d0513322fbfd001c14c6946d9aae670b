package AssigmentFour;

import java.util.Locale;
import java.util.Scanner;

public class ReverseWrod {

		public static void main (String[] args) {
		       String reverseOutput = reverse("Hello World");
		       System.out.print(reverseOutput);
	    }
		
		public static String reverse(String word) {
			char[] letter = new char[word.length()];
			char letterCount = 0;
			
			for(int i = word.length() - 1; i >= 0; i--) {
				letter[letterCount] = word.charAt(i);
				letterCount++;
			}
			
			String reverse = "";
			
			for(int i = 0 ; i < word.length(); i++) {
				reverse = reverse + letter[i];
			}
		
			
			return reverse.toUpperCase();
		}

}
